<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="turn.zio.zara.travel_log.option">

    <LinearLayout
        android:id="@+id/my_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fafafa"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="8dp"
            android:background="#fafafa"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#fafafa">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#fafafa"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/bakcMain"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="#fafafa"
                        android:onClick="bakcMain"
                        android:src="@drawable/backbutton2" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#fafafa"
                android:gravity="center_vertical|center_horizontal">

                <TextView
                    android:id="@+id/log_Write_Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#fafafa"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="옵션"
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#fafafa">

                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:background="#fafafa"></LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#e6e6e6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fafafa"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/user_edit_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#fafafa"
                    android:text="설정"
                    android:textColor="#000000"
                    android:textSize="18dp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#e6e6e6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/profile_change"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="7dp"
                    android:layout_weight="1"
                    android:onClick="profile_change"
                    android:text="프로필 편집"
                    android:textColor="#000000"
                    android:textSize="22dp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="30dp"
                    android:background="#e6e6e6" />

                <TextView
                    android:id="@+id/pass_change"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="7dp"
                    android:layout_weight="1"
                    android:onClick="passChangeView"
                    android:text="비밀번호 변경"
                    android:textColor="#000000"
                    android:textSize="22dp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="30dp"
                    android:background="#e6e6e6" />

                <TextView
                    android:id="@+id/user_like"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="7dp"
                    android:layout_weight="1"
                    android:onClick="like_board"
                    android:text="회원님이 좋아한 게시물"
                    android:textColor="#000000"
                    android:textSize="22dp" />

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#e6e6e6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/user_edit_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#fafafa"
                    android:text="계정"
                    android:textColor="#000000"
                    android:textSize="18dp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#e6e6e6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/push_alram_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="7dp"
                    android:layout_weight="1"
                    android:onClick="push_alram_setting"
                    android:text="푸시 알림 설정 "
                    android:textColor="#000000"
                    android:textSize="22dp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="30dp"
                    android:background="#e6e6e6" />

                <TextView
                    android:id="@+id/logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="7dp"
                    android:layout_weight="1"
                    android:onClick="user_logout"
                    android:text="로그아웃"
                    android:textColor="#000000"
                    android:textSize="22dp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_weight="1"
                    android:background="#e6e6e6" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
