<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="150dp"
        android:background="#fafafa"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/storyDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="#fafafa"
            android:onClick="travel_Story"
            app:srcCompat="@drawable/story" />

        <ImageView
            android:id="@+id/moneyDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="#fafafa"
            android:onClick="smart_Cost"
            app:srcCompat="@drawable/money1" />

        <ImageView
            android:id="@+id/mapDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="#fafafa"
            app:srcCompat="@drawable/map" />

        <ImageView
            android:id="@+id/supplyDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="#fafafa"
            android:onClick="travel_Supply"
            app:srcCompat="@drawable/supply1" />

        <ImageView
            android:id="@+id/groupDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="#fafafa"
            android:onClick="travel_Group"
            app:srcCompat="@drawable/group1" />
    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#e6e6e6" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="지도"
            android:textColor="#999999" />
    </ScrollView>

</LinearLayout>